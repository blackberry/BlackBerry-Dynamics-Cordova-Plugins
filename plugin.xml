<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android" id="cordova-plugin-bbd-file-transfer" version="1.0.0">
    <name>cordova-plugin-bbd-file-transfer</name>
    <description>BlackBerry Dynamics Cordova File Transfer Plugin</description>
    <license>SEE LICENSE IN LICENSE</license>
    <keywords>cordova,file,transfer</keywords>

    <info>
        The FileTransfer plugin is dependent on Base and Dynamics File plugins, so please make sure Base and File plugins are installed correctly.

        Original Cordova FileTransfer plugin link: https://github.com/apache/cordova-plugin-file-transfer
    </info>

    <dependency id="cordova-plugin-bbd-file"
        url="git+https://github.com/blackberry/BlackBerry-Dynamics-Cordova-Plugins#file" version="^1.0.0" />

    <js-module src="www/FileTransferError.js" name="FileTransferError">
        <clobbers target="window.FileTransferError" />
    </js-module>
    <js-module src="www/FileTransfer.js" name="FileTransfer">
        <clobbers target="window.FileTransfer" />
    </js-module>
    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="BBDFileTransfer">
                <param name="android-package" value="com.blackberry.bbd.cordova.plugins.filetransfer.BBDFileTransfer" />
                <param name="onload" value="true" />
            </feature>
        </config-file>
        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        </config-file>
        <source-file src="src/android/DecompressingEntity.java" target-dir="src/com/blackberry/bbd/cordova/apache/http/entity" />
        <source-file src="src/android/GzipDecompressingEntity.java" target-dir="src/com/blackberry/bbd/cordova/apache/http/entity" />
        <source-file src="src/android/InputStreamFactory.java" target-dir="src/com/blackberry/bbd/cordova/apache/http/entity" />
        <source-file src="src/android/LazyDecompressingInputStream.java" target-dir="src/com/blackberry/bbd/cordova/apache/http/entity" />
        <source-file src="src/android/FileBody.java" target-dir="src/com/blackberry/bbd/cordova/plugins/filetransfer" />
        <source-file src="src/android/InputStreamBody.java" target-dir="src/com/blackberry/bbd/cordova/plugins/filetransfer" />
        <source-file src="src/android/ProgressFileEntity.java" target-dir="src/com/blackberry/bbd/cordova/plugins/filetransfer" />
        <source-file src="src/android/ProgressInputStreamEntity.java" target-dir="src/com/blackberry/bbd/cordova/plugins/filetransfer" />
        <source-file src="src/android/OnProgressEvent.java" target-dir="src/com/blackberry/bbd/cordova/plugins/filetransfer" />
        <source-file src="src/android/FileProgressResult.java" target-dir="src/com/blackberry/bbd/cordova/plugins/filetransfer" />
        <source-file src="src/android/FileUploadResult.java" target-dir="src/com/blackberry/bbd/cordova/plugins/filetransfer" />
        <source-file src="src/android/BBDFileTransfer.java" target-dir="src/com/blackberry/bbd/cordova/plugins/filetransfer" />
    </platform>
    <!-- ios -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="BBDFileTransfer">
                <param name="ios-package" value="CDVFileTransferBD" />
            </feature>
        </config-file>
        <header-file src="src/ios/CDVFileTransferBD.h" />
        <source-file src="src/ios/CDVFileTransferBD.m" />
        <framework src="AssetsLibrary.framework" />
    </platform>

    <hook type="after_plugin_install" src="scripts/hooks/afterPluginInstall.js" />
</plugin>
